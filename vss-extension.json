{
    "manifestVersion": 1,
    "id": "contributions-widget",
    "version": "3.1.1",
    "name": "Contributions Widget",
    "scopes": [
        "vso.work",
        "vso.code"
    ],
    "description": "Dashboard widget displaying a GitHub-style contribution graph tracking commits, pull requests, and work items.",
    "publisher": "knowall-ai",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services.Cloud"
        },
        {
            "id": "Microsoft.TeamFoundation.Server",
            "version": "[15.0,)"
        }
    ],
    "tags": [
        "Work Items",
        "Work Item",
        "Git",
        "Pull Request",
        "Commit",
        "Visualization",
        "Contributions",
        "Dashboard",
        "Widget"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/knowall-ai/devops-contributions"
    },
    "branding": {
        "color": "#333732",
        "theme": "dark"
    },
    "files": [
        {
            "path": "dist",
            "addressable": true
        },
        {
            "path": "img",
            "addressable": true
        }
    ],
    "categories": [
        "Azure Boards"
    ],
    "contributions": [
        {
            "id": "ContributionsWidget",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog"
            ],
            "properties": {
                "name": "Contributions Widget",
                "description": "GitHub-style contribution graph showing commits, PRs, and work items",
                "catalogIconUrl": "img/logo.png",
                "uri": "dist/contributionsWidget.html",
                "supportedSizes": [
                    {"rowSpan": 2, "columnSpan": 4},
                    {"rowSpan": 2, "columnSpan": 5},
                    {"rowSpan": 2, "columnSpan": 6},
                    {"rowSpan": 2, "columnSpan": 7},
                    {"rowSpan": 2, "columnSpan": 8},
                    {"rowSpan": 2, "columnSpan": 9},
                    {"rowSpan": 2, "columnSpan": 10},
                    {"rowSpan": 3, "columnSpan": 4},
                    {"rowSpan": 3, "columnSpan": 5},
                    {"rowSpan": 3, "columnSpan": 6},
                    {"rowSpan": 3, "columnSpan": 7},
                    {"rowSpan": 3, "columnSpan": 8},
                    {"rowSpan": 3, "columnSpan": 9},
                    {"rowSpan": 3, "columnSpan": 10}
                ],
                "defaultSize": {"rowSpan": 2, "columnSpan": 5},
                "supportedScopes": ["project_team"],
                "configurationContributionId": "knowall-ai.contributions-widget.ContributionsWidget-Configuration"
            }
        },
        {
            "id": "ContributionsWidget-Configuration",
            "type": "ms.vss-dashboards-web.widget-configuration",
            "targets": [
                "ms.vss-dashboards-web.widget-configuration"
            ],
            "properties": {
                "name": "Contributions Graph Configuration",
                "description": "Configure contribution filters",
                "uri": "dist/contributionsWidgetConfiguration.html"
            }
        }
    ]
}
