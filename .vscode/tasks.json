// VS Code task runner configuration
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Dev)",
            "type": "shell",
            "command": "bun run package-dev",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "command": "bun run package-release",
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "bun run lint",
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "Format",
            "type": "shell",
            "command": "bun run format",
            "problemMatcher": []
        },
        {
            "label": "Dev Server",
            "type": "shell",
            "command": "bun run dev",
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}
